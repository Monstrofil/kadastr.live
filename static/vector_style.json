{
  "version": 8,
  "name": "cadaster",
  "metadata": {"maputnik:renderer": "mbgljs"},
  "sources": {
    "cadastr": {
      "type": "vector",
      "url": "https://tiles.kadastr.live/capabilities/kadastr.json"
    },
    "raster-tiles": {
      "type": "raster",
      "tiles": ["https://a.tile.openstreetmap.org/{z}/{x}/{y}.png"],
      "tileSize": 256,
      "attribution": "OpenStreetMap contributors",
      "maxzoom": 19
    },
    "orto-tiles": {
      "type": "raster",
      "tiles": ["/map/rtile/carto_2240035321813140995/ua/{z}/{x}/{y}.png"],
      "tileSize": 256,
      "attribution": "DZK",
      "maxzoom": 19
    },
    "wms-kadastr-source": {
      "type": "raster",
      "tiles": [
        "https://m1.land.gov.ua/geowebcache/service/wms?bbox={bbox-epsg-3857}&format=image/png&service=WMS&version=1.1.1&request=GetMap&srs=EPSG:3857&transparent=true&width=256&height=256&layers=kadastr"
      ],
      "tileSize": 256,
      "attribution": "ДЗК",
      "maxzoom": 16
    }
  },
  "glyphs": "https://fonts.openmaptiles.org/{fontstack}/{range}.pbf",
  "layers": [
    {
      "id": "openstreetmap",
      "type": "raster",
      "source": "raster-tiles",
      "minzoom": 0,
      "maxzoom": 22,
      "layout": {"visibility": "none"}
    },
    {
      "id": "orto-tiles",
      "type": "raster",
      "source": "orto-tiles",
      "minzoom": 0,
      "maxzoom": 22,
      "layout": {"visibility": "none"}
    },
    {
      "id": "dzk",
      "type": "raster",
      "source": "wms-kadastr-source",
      "minzoom": 0,
      "maxzoom": 22,
      "layout": {"visibility": "visible"}
    },
    {
      "id": "kadcenter_address",
      "type": "circle",
      "source": "cadastr",
      "source-layer": "points",
      "layout": {"visibility": "visible"},
      "paint": {
        "circle-radius": {"stops": [[1, 3], [14, 3], [16, 4]]},
        "circle-blur": 0,
        "circle-color": ["case", ["==", ["get", "address"], ""], "rgba(246, 250, 2, 1)", "rgba(2, 250, 135, 1)"],
        "circle-stroke-color": "rgba(0, 0, 0, 0.3)",
        "circle-opacity": 1,
        "circle-stroke-width": 1
      }
    },
    {
      "id": "landuse_count_points",
      "type": "symbol",
      "source": "cadastr",
      "source-layer": "centroids",
      "maxzoom": 7,
      "layout": {
        "text-field": "{parcels}",
        "text-font": ["Open Sans Bold"],
        "text-ignore-placement": false,
        "text-allow-overlap": false,
        "text-anchor": "center",
        "text-justify": "center",
        "text-letter-spacing": 0,
        "text-keep-upright": false,
        "text-transform": "none",
        "text-optional": false,
        "text-pitch-alignment": "auto",
        "text-size": {"stops": [[6, 18], [7, 21]]}
      },
      "paint": {
        "text-color": "rgba(0, 0, 0, 1)",
        "text-halo-color": "rgba(255, 255, 255, 1)",
        "text-halo-width": 2
      }
    },
    {
      "id": "landuse_count_background",
      "type": "fill",
      "source": "cadastr",
      "source-layer": "polygons",
      "maxzoom": 8,
      "paint": {
        "fill-color": {
          "stops": [
            [3, "rgba(255, 255, 255, 0.5)"],
            [5, "rgba(255, 255, 255, 0.3)"],
            [8, "rgba(0, 0, 0, 0)"]
          ]
        }
      }
    }
  ],
  "id": "positron"
}